{
  "manifest_version": 3,
  "name": "Job Matcher AI",
  "version": "1.0.0",
  "description": "Analyze job descriptions and compare them with your resume using Gemini AI.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Job Matcher AI"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}